@page "/admin/language/add"
@inherits MvvmComponentBase<LanguageViewModel>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudGrid>
        <MudItem xs="2" Class="d-flex justify-center align-center">
            <MudIconButton Color="Color.Primary" Icon="@Icons.Material.Filled.ArrowBack" Href="/admin/language/list"></MudIconButton>
        </MudItem>
        <MudItem xs="8" Class="d-flex justify-start align-center">
            <MudText Typo="Typo.h6">Dodaj język</MudText>
        </MudItem>
    </MudGrid>
    <EditForm Model="ViewModel.Model" OnValidSubmit="ViewModel.AddAsync()" OnInvalidSubmit="ViewModel.AddAsync()">
        <DataAnnotationsValidator />
        <MudCard Class="mt-8">
            <MudCardContent>
                <MudTextField Label="Nazwa języka" @bind-Value="ViewModel.Model.LanguageName"
                              For="@(() => ViewModel.Model.LanguageName)" />
                <MudTextField Label="Skrót języka" @bind-Value="ViewModel.Model.AbbrLanguageName"
                              For="@(() => ViewModel.Model.AbbrLanguageName)" />
            </MudCardContent>
            <MudCardActions>
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Dodaj</MudButton>
            </MudCardActions>
        </MudCard>
    </EditForm>
</MudContainer>

@code {
    protected override async Task OnInitializedAsync()
    {
        ViewModel.LoadItemNew();
    }
}
