@model BiuroPodrozy.PortalWWW.Models.TripDetailsModel


<div class="">
    @await Component.InvokeAsync("CardQuickSearchComponent")
    <div id="details-search-main">
        <div class="container-fluid w-90">
            <div class="display-6 pt-5 text-start fw-bolder">Informacje o wycieczce</div>
            <div class="card mt-5">
                <div class="row g-0">
                    <div class="col-md-8">
                        <div class="card-body">
                            <h3 class="card-title p-3">@Model.Trip.TripName</h3>
                            <p class="card-text">@Model.Trip.TripCode</p>
                            <p class="card-text">@Model.Trip.TripDescription</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="card-text fs-6 fw-bold">Typ wycieczki: @Model.Trip.TripType</div>
                                <div class="card-text fs-6 fw-bold">CENA: Dorośli - @Model.Trip.TripCostPerAdult ZŁ, Dzieci - @Model.Trip.TripCostPerChild ZŁ</div>
                                <input type="submit" class="btn btn-yellow fw-bolder" value="REZERWUJ" />

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img src="~/Assets/Images/@Model.Trip.Photos.First()" class="img-fluid rounded-start" alt="...">
                    </div>
                </div>
            </div>

            <div class="mt-5 mb-5">
                <div class="row g-0">
                    <div class="col-md-8">
                        @foreach (var photo in Model.Trip.Photos)
                        {
                            <img src="~/Assets/Images/@photo" class="img-thumbnail w-25" alt="...">
                        }
                    </div>                  
                </div>
            </div>

            <div class="row mb-5 mt-5">
            </div>
        </div>
    </div>
</div>
