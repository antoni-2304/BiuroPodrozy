@model ICollection<string>
@{
    var array = "";
    foreach (var photo in Model)
    {
        array += photo + ",";
    }
    array = array.Substring(0, ((array.Length - 1 < 0) ? array.Length : array.Length - 1));
}

<div class="accordion mt-3" id="accordionParent">
    <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse" aria-expanded="true" aria-controls="collapse">
                    Galeria zdjęć
                </button>
            </h2>
            <div id="collapse" class="accordion-collapse collapse show" data-bs-parent="#accordionParent">
                <div class="accordion-body">
                    <div class="row">
                        @foreach (var photo in Model)
                        {
                            <input name="Photos" value="@photo" class="visually-hidden" />
                            <div class="col-12 col-md-6 col-lg-4">
                                <div class="card">
                                    <img src="~/Assets/Images/@photo" class="img-thumbnail" alt="..." style="height: 150px" />
                                    <button type="button" onclick="deletePhoto('@array','@photo')" value="Usuń" class="btn btn-danger" style="position: absolute; top: 5px; right: 5px; border-radius: 50%; opacity: 0.5" >X</button>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="mt-3 d-flex flex-row justify-content-end">
                        <input id="addPhotoName" class="btn btn-dark-blue form-control" type="file" onChange="addPhoto(this, '@array')" accept="image/png, image/jpeg" />
                    </div>
                </div>
            </div>
    </div>
</div>
