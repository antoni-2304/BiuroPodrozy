<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - BiuroPodrozy.Intranet</title>

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/BiuroPodrozy.Intranet.styles.css" asp-append-version="true" />
</head>
<body>

	<header class="navbar navbar-dark sticky-top bg-dark-blue flex-md-nowrap p-0 shadow">
		<a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" asp-area="" asp-controller="Home" asp-action="Index">Biuro Podróży - Intranet</a>
		<button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="navbar-nav">
			<div class="nav-item text-nowrap">
				<a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index">Wyloguj</a>
			</div>
		</div>
	</header>

	<div class="container-fluid">
		<div class="row">
			<nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
				<div class="position-sticky pt-3">
					<h5 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">Sekcja CMS</h5>
					<ul class="nav flex-column">
						<li class="nav-item">
							<a class="nav-link active" asp-area="" asp-controller="Site" asp-action="Index">Portal</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" asp-area="" asp-controller="Pages" asp-action="Index">Strony</a>
						</li>
					</ul>
					<h5 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">Sekcja biura podróży</h5>
					<ul class="nav flex-column">
						<li class="nav-item">
							<a class="nav-link active" asp-area="" asp-controller="Countries" asp-action="Index">Kraje</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" asp-area="" asp-controller="Cities" asp-action="Index">Miasta</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" asp-area="" asp-controller="Hotels" asp-action="Index">Hotele</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" asp-area="" asp-controller="Trips" asp-action="Index">Wycieczki</a>
						</li>
					</ul>
					<h5 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">Sekcja administracyjna</h5>
					<ul class="nav flex-column">
						<li class="nav-item">
							<a class="nav-link active" asp-area="" asp-controller="Languages" asp-action="Index">Języki</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" asp-area="" asp-controller="Currencies" asp-action="Index">Waluty</a>
						</li>
					</ul>
				</div>
			</nav>
			<main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
				@RenderBody()
			</main>
		</div>
	</div>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
