@model BiuroPodrozy.Data.Site

@{
    ViewData["Title"] = "Edit";
}

<div class="card mt-3">
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="card-title d-flex flex-row justify-content-between">
                <h5 class="text-center m-0 align-content-center">Edytuj dane strony</h5>
                <div>
                    <a asp-action="Index" class="btn btn-outline-dark-blue">Wróć</a>
                    <input type="submit" asp-action="Edit" value="Edytuj" class="btn btn-dark-blue" />
                </div>
            </div>
            <div class="card-text">
                <div class="row justify-content-center">
                    <div class="col-6">
                        <input asp-for="IdSite" class="visually-hidden" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="Title" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="Description" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="Author" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Author" class="form-control" />
                                <span asp-validation-for="Author" class="text-danger"></span>
                            </div>
                        </div>
                         <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="Tag" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Tag" class="form-control" />
                                <span asp-validation-for="Tag" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="Logo" class="control-label"></label>
                            </div>
                            <div class="col-md-8">
                                <input asp-for="Logo" class="form-control" type="file" name="LogoUploaded" accept="image/png, image/jpg" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
