@model BiuroPodrozy.Data.CityDTO

@{
    ViewData["Title"] = "Create";
}

<div class="card mt-3">
    <div class="card-body">
        <form asp-action="Create">
            <div class="card-title d-flex flex-row justify-content-between">
                <h5 class="text-center m-0 align-content-center">Dodaj nowe miasto</h5>
                <div>
                    <a asp-action="Index" class="btn btn-outline-dark-blue">Wróć</a>
                    <input type="submit" asp-action="Create" value="Dodaj" class="btn btn-dark-blue" />
                </div>
            </div>
            <div class="card-text">
                <div class="row justify-content-center">
                    <div class="col-6">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="CityName" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="CityName" class="form-control" />
                                <span asp-validation-for="CityName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="PostalCode" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="PostalCode" class="form-control" />
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="Population" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Population" class="form-control" />
                                <span asp-validation-for="Population" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="CountryName" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <select asp-for="IdCountry" class="form-control" asp-items="ViewBag.IdCountry"></select>
                            </div>
                        </div>
                        <input asp-for="CountryName" hidden/>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
