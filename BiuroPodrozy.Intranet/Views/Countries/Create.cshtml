@model BiuroPodrozy.Data.CountryDTO

@{
    ViewData["Title"] = "Create";
}

<div class="card mt-3">
    <div class="card-body">
        <form asp-action="Create">
            <div class="card-title d-flex flex-row justify-content-between">
                <h5 class="text-center m-0 align-content-center">Dodaj nowy kraj</h5>
                <div>
                    <a asp-action="Index" class="btn btn-outline-dark-blue">Wróć</a>
                    <input type="submit" asp-action="Create" value="Dodaj" class="btn btn-dark-blue" />
                </div>
            </div>
            <div class="card-text">
                <div class="row justify-content-center">
                    <div class="col-6">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="CountryName" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="CountryName" class="form-control" />
                                <span asp-validation-for="CountryName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="AbbrCountryName" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="AbbrCountryName" class="form-control" />
                                <span asp-validation-for="AbbrCountryName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="Continent" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <select asp-for="Continent" class="form-control" asp-items="ViewBag.Continent"></select>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="Population" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Population" class="form-control" />
                                <span asp-validation-for="Population" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="CountrySize" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="CountrySize" class="form-control" />
                                <span asp-validation-for="CountrySize" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="PhoneCode" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="PhoneCode" class="form-control" />
                                <span asp-validation-for="PhoneCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="CurrencyName" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <select asp-for="IdCurrency" class="form-control" asp-items="ViewBag.IdCurrency"></select>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="LanguageName" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <select asp-for="IdLanguage" class="form-control" asp-items="ViewBag.IdLanguage"></select>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="CapitalCityName" class="control-label"></label>
                            </div>
                            <div class="col-md-9">
                                <select asp-for="IdCapitalCity" class="form-control" asp-items="ViewBag.IdCapitalCity"></select>
                            </div>
                        </div>
                        <hr />

                        <div class="form-group row mt-2">
                            <div class="col-md-3 pt-2">
                                <label asp-for="Photos" class="control-label"></label>
                            </div>
                            <div class="col-md-8">
                                <input asp-for="Photos" class="form-control" type="file" name="Photos" accept="image/png, image/jpg" multiple />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}