@model BiuroPodrozy.Intranet.ModelsForView.IndexTableViewModel<BiuroPodrozy.Data.CountryDTO>

@{
    var index = (Model.CurrentPage - 1) * Model.ItemsPerPage;
    var dummy = Model.Items.FirstOrDefault();
    ViewData["Title"] = "Index";
}
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.AbbrCountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.Continent)
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.Population)
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.CountrySize)
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.PhoneCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.Population)
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.CurrencyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.LanguageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.CapitalCityName)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PaginatedItems())
        {
            <tr>
                <td>
                    @(++index)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.CountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.AbbrCountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Continent)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Population)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.CountrySize)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.PhoneCode)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Population)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.CurrencyName)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.LanguageName)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.CapitalCityName)
                </td>
                <td>
                    <div class="btn-group btn-group-sm" role="group" aria-label="Button Group">
                        <a asp-action="Edit" class="btn btn-dark-blue" asp-route-id="@item.IdCountry">
                            <i class="bi-pencil"></i>
                        </a>
                        <a asp-action="Details" class="btn btn-dark-blue" asp-route-id="@item.IdCountry">
                            <i class="bi-search"></i>
                        </a>
                        <a asp-action="Delete" class="btn btn-dark-blue" asp-route-id="@item.IdCountry">
                            <i class="bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("_PaginationLayout", Model)